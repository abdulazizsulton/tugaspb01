<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#666767">



    <TextView
        android:id="@+id/tvTitlee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" TOKO SEPATU  "
        android:textSize="19sp"
        android:textStyle="bold|italic" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:paddingTop="10sp">

            <TableLayout>
                <TableRow>
                    <TextView
                        android:id="@+id/tvSepatu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:baselineAligned="false"
                        android:layout_weight="1"
                        android:text="Air Jordan Rp.2.200.000"
                        android:inputType="number" />
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/etSepatu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        />
                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="2px"
                android:layout_height="240px"
                android:layout_weight="1"
                android:src="@drawable/jordan12" />
        </TableRow>

        <TableRow android:paddingTop="10sp">

            <TableLayout>
                <TableRow>
                    <TextView
                        android:id="@+id/tvSepatuu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:baselineAligned="false"
                        android:layout_weight="1"
                        android:text="Air Max1 Rp.1.700.000"
                        android:inputType="number" />
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/etSepatuu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        />
                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="20px"
                android:layout_height="300px"
                android:layout_weight="1"
                android:src="@drawable/airmax11" />
        </TableRow>

        <TableRow android:paddingTop="10sp">

            <TableLayout>
                <TableRow>
                    <TextView
                        android:id="@+id/tvSepatuuu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:baselineAligned="false"
                        android:layout_weight="1"
                        android:text="Dunk Low Rp.1.400.000"
                        android:inputType="number" />
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/etSepatuuu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:gravity="center"
                        android:hint="0"
                        />
                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="20px"
                android:layout_height="240px"
                android:layout_weight="1"
                android:src="@drawable/dunklow" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnTotalbelanja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="Price" />



    <RadioGroup
        android:id="@+id/btnRadiogroupp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btnSilver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Silver" />

        <RadioButton
            android:id="@+id/btnGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Gold" />

        <RadioButton
            android:id="@+id/btnPlatinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Platinum" />


    </RadioGroup>

    <TextView
        android:id="@+id/tvTotall"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:gravity="center"
        android:text="Total Harga"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>